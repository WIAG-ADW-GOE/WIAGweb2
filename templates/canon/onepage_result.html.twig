{# canon/onepage_result.html.twig #}
<!DOCTYPE html>
<html class="h-100">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Domherren{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
        and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="d-flex flex-column h-100">
	{% block body %}
	    <div class="container-fluid mt-3">
		<div class="row mx-2 col-12">
		    {% if title %}
			<h1>{{ title }}</h1>
		    {% else %}
			<h1>Domherren</h1>
		    {% endif %}
		</div>
		{% for canon in canon_list %}
		    {% set person=canon['person'] %}
		    {% set item=canon['item'] %}
		    {% set id_public=person.item.idpublic %}
		    {% set permalink %}{{ protocol }}:{{ url('id', {id: id_public}, schemeRelative = true) }}{% endset %}

		    {# name, dates of birth and death #}
		    {% set dobdod = null %}
		    {% if not person.datebirth and not person.datedeath %}
		    {% else %}
			{% if person.datebirth and not person.datedeath %}
			    {% set dobdod = "*&nbsp;" ~ person.datebirth %}
			{% elseif not person.datebirth and person.datedeath %}
			    {% set dobdod = "†&nbsp;" ~ person.datedeath %}
			{% else %}
			    {% set dobdod = "*&nbsp;" ~ person.datebirth ~ " †&nbsp;" ~ person.datedeath %}
			{% endif %}
		    {% endif %}
		    <div class="row mx-2 col-12">
			{# wiagid #}
			<div custom-style="WiagId" class="d-flex"><a class="ms-auto" href={{ permalink }}>{{ id_public }}</a></div>
			{# name #}
			<h3>{{ person.displayname|protectOrdinal|raw }}{% if dobdod %}, {{ dobdod|raw }}{% endif %}</h3>
			{# comments #}
			{% if person.noteperson %}
			    <div custom-style="Bemerkung">{{ person.noteperson|protectOrdinal|raw }}</div>
			{% endif %}
		    </div>

		    {# offices and references#}
		    {% for item_loop in item %}
			{# offices, parameter: item #}
			<div class="row col-12 mx-2">
			    {% if item_loop.itemTypeID == 6 %}
				<div class="d-flex mt-2"><h4 class="ms-auto subsection"><a href="{{ item_loop.UriExternalByAuthorityId(200) }}"> GSN {{ item_loop.IdExternalByAuthorityId(200) }}</a></h4></div>
			    {% endif %}
			    {% if item_loop.itemTypeID == 4 %}
				<div class="d-flex mt-2"><h4 class="ms-auto subsection"><a href="{{ path('id', {id: item_loop.idPublic}) }}">{{ item_loop.idPublic}}</a></h4></div>
			    {% endif %}
			    {% for o in item_loop.person.role %}
				<div custom-style="Aemter">
				    {% set datestr=null %}
				    {% if not o.datebegin and not o.dateend %}
				    {% elseif o.datebegin and not o.dateend %}
					{% set datestr=o.datebegin %}
				    {% elseif not o.datebegin and o.dateend %}
					{% set datestr=o.dateend %}
				    {% else %}
					{% set datestr=o.datebegin~'&nbsp;-&nbsp;'~o.dateend %}
				    {% endif %}

				    {% set orgstr=null %}
				    {% if o.diocesename and not o.institutionid %}
					{% set orgstr=o.diocesename %}
				    {% endif %}
				    {% if o.institutionid %}
					{% set orgstr=o.institution.name ?: o.institutionname %}
				    {% endif %}

				    {% if o.role and o.role.name %}{{ o.role.name }}{% elseif o.rolename %}{{ o.rolename }}{% endif %}
				    {{ orgstr }}{% if datestr %}, {{ datestr|raw }}{% endif %}{% if o.roleproperty|length > 0 %}, {{ o.roleproperty|map(p => "#{p.name} #{p.value}")|join(', ') }}{% endif %}{% if o.note %} ({{ o.note|protectOrdinal|raw }}){% endif %}
				</div>
			    {% endfor %}
			</div>
			<div class="row col-12 mx-2">
			    <div custom_style="Compact" class="small mt-2">
				{% for ref in item_loop.reference %}
				    {% set idinref = ref.idinreference %}
				    {{ ref.referencevolume.titleshort }}{% if ref.page %}, S.&nbsp;{{ ref.page|replace({'<b>':'', '</b>':''}) }} {% endif %}{% if idinref %}, ID/Nr.&nbsp;{{ idinref }}{% endif %}{% if not loop.last %} &ndash; {% endif %}
				{% endfor %}
			    </div>
			</div>

		    {% endfor %}

		{% endfor %}
	    </div>
	{% endblock %}
    </body>
</html>
