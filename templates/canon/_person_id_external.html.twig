{# parameter ids #}
<div class="card">
    <span class="card-header"><strong>Externe Identifier</strong></span>
    <div class="card-body">
	<ul class="list-unstyled mb-0">
	    {% if epid %}
		<li>
		    <ul class="list-inlined list-unstyled">
			<li class="list-inline-item">WIAG-ID</li>
			<li class="list-inline-item">
			    <a href="{{ path('id', {id: epid}) }}" target="_blank" rel="noopener">{{ epid }}</a></li>
		    </ul>
		</li>
	    {% endif %}
	    {% for id in ids|sort((a, b) => a.authority.displayorder <=> b.authority.displayorder) %}
		<li>
		    <ul class="list-inlined list-unstyled">
			<li class="list-inline-item">{{ id.authority.urlnameformatter }}</li>
			<li class="list-inline-item">
			    <a href="{{ id.authority.urlformatter~id.value }}" target="_blank" rel="noopener">{{ id.prettyvalue }}</a></li>
		    </ul>
		</li>
	    {% endfor %}
	</ul>
    </div>
</div>
