<div class="ms-2 my-1"> {# empty div to have the same structure for all sections #}
    <div class="input-group input-group-sm">
	<div class="form-check">
	    <input class="form-check-input"
		   type="checkbox"
		   value=""
		   id="{{ base_id }}_item_isOnline"
		   name="{{ base_input_name }}[item][isOnline]"
		   {% if person.item.isonline %}checked="checked"{% endif %}>
	    <label class="form-check-label" for="{{ base_id }}_item_isOnline">online</label>
	</div>
	<div class="form_check ms-2">
	    <input class="form-check-input"
		   type="checkbox"
		   value=""
		   id="{{ base_id }}_item_isDeleted"
		   name="{{ base_input_name }}[item][isDeleted]"
		   {% if person.item.isdeleted %}checked="checked"{% endif %}>
	    <label class="form-check-label ms-1" for="{{ base_id }}_item_isDeleted">gel√∂scht</label>
	</div>
	<span class="input-group-text ms-2">Status</span>
	<span class="w-15"
	      {{ stimulus_controller('autocomplete', {
		  url: path('person_suggest', {itemTypeId: itemTypeId, field: 'editStatus'}),
	      }) }} >
	    <input type="text" id="{{ base_id }}_item_editstatus"
		   name="{{ base_input_name}}[item][editStatus]"
		   class="form-control form-control-sm"
		   value="{{ person.item.editstatus }}"
		   style="max-width: 10em"
		   spellcheck="false"
		   aria-label="Status"
		   data-autocomplete-target="input">
	    <ul class="list-group autocomplete-target"
		       data-autocomplete-target="results"
		       style="max-width: 20rem;"></ul>
	</span>
	{% if false %} {# select version #}
	    {% set field_id=base_id~"_item_editstatus" %}
	    {% set input_name=base_input_name~"[item][editStatus]" %}
	    <label class="input-group-text" for="{{ field_id }}">Status</label>
	    <select class="form-select" style ="max-width: 10em" id="{{ field_id }}" name="{{ input_name }}">
		{% for value in ['importiert', 'in Arbeit', 'fertig'] %}
		    <option value="{{ value }}" {% if value == person.item.editstatus %}selected{% endif %}>{{ value }}</option>
		{% endfor %}
	    </select>
	{% endif %}
    </div>
</div>
