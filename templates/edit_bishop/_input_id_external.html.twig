<div class="mt-1 pe-1"> {# empty div to copy the structure of the other sections #}
    {% set base_id_idext=base_id~'_idext' %}
    {% set base_input_name_idext=base_input_name~'[idext]' %}
    {% set auth_list = [
	{ id: 'GS', short: 'GS', aria: 'GSN' },
	{ id: 'GND', short: 'GND', aria: 'GSN' },
	{ id: 'Wikidata', short: 'Wikidata', aria: 'Wikidata-ID' },
	{ id: 'VIAF', short: 'VIAF', aria: 'VIAF-ID' },
	{ id: 'Wikipedia', short: 'Wikipedia', aria: 'Wikipedia' },
    ] %}
    <div class="input-group input-group-sm">
	{% for auth in auth_list %}
	    <span class="input-group-text"><a href="{{ person.item.geturiexternalbyauthority(auth.short) }}" target="_blank" rel="noopener">{{ auth.short }}</a></span>
	    <input type="text" id="{{ base_id_idext }}_{{ auth.id }}"
		   name="{{ base_input_name_idext}}[{{ auth.id }}]"
		   class="form-control form-control-sm wiag-input"
		   value="{{ person.item.getidexternalbyauthority(auth.short) }}"
		   spellcheck="false"
		   aria-label="{{ auth.aria }}">
	{% endfor %}
    </div>
</div>
