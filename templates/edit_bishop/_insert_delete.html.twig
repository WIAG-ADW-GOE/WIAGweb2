     data-sync-toggle-first-value=""
     data-sync-toggle-second-value="delete">
    <span class="text-nowrap">
	{% if is_last %}
	    <button class="btn btn-light btn-sm"
		    type="button"
		    data-action="insert#insertTemplate"><img width="20" height="20" src="{{ asset('images/symbols/plus-square.svg') }}" alt="Plus"></button>
	{% endif %}
	{# delete button, do not include _delete_button (with extra div) #}
	<input type="text"
	       id="{{ base_id_delete }}_delete"
	       name="{{ base_name_delete }}[delete]"
	       class="form-control form-control-sm d-none"
	       data-sync-target="toggle"
	       value="">
