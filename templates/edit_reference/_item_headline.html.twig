<div class="row">
    <div class="col-12">
	<div class="input-group input-group-sm">
	    <span class="text-nowrap">
		{% if expanded %}
		    <button class="btn btn-sm ms-1 pt-0 px-1 align-top"
			    type="button"
			    data-bs-toggle="collapse"
			    value="open"
			    data-bs-target={{ "#body#{reference.id}" }}
			    aria-expanded="true"
			    aria-controls={{ "body#{reference.id}" }}
			    data-toggle-arrow-target="button"><img src="{{ asset('images/symbols/caret-down-square.svg') }}" alt="Pfeilsymbol"></button>
		{% else %}
		    <button class="btn btn-sm ms-1 pt-0 px-1 align-top"
			    type="button"
			    value="closed"
			    data-bs-toggle="collapse"
			    data-bs-target={{ "#body#{reference.id}" }}
			    aria-expanded="false"
			    aria-controls={{ "body#{reference.id}" }}

			    data-toggle-arrow-target="button"><img src="{{ asset('images/symbols/caret-right-square.svg') }}" alt="Pfeilsymbol"></button>
		{% endif %}
		<input class="form-check-input ms-0 pt-0 mt-0 align-middle"
		       type="checkbox"
		       value="1"
		       id="{{ base_id }}_formisedited"
		       name="{{ base_input_name }}[formIsEdited]"
		       data-on-input-target="checkbox"
		       {% if reference.formisedited %}checked="checked"{% endif %}>
	    </span>

	    {% set head_line=reference.fullcitation %}
	    <span class="ms-2 text-truncate" style="max-width: 50em;">{{ head_line }}</span>
	    {# insert internal id and item_type_id into the form (hidden) #}
	    <input type="text"
		   id="{{ base_id }}_id"
		   name="{{ base_input_name }}[id]"
		   class="form-control form-control-sm d-none"
		   value="{{ reference.id }}">
	    <input type="text"
		   id="{{ base_id }}_item_type_id"
		   name="{{ base_input_name }}[itemTypeId]"
		   class="form-control form-control-sm d-none"
		   value="{{ reference.itemTypeId }}">
	    <span class="vr ms-auto"></span>
	    <span class="bg-light ms-1 px-2" style="min-width: 4rem">ID: {{ reference.referenceId }}</span>
	</div>
    </div>
</div>
