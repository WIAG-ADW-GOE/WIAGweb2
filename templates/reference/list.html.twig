{% extends 'base.html.twig' %}
{% set menuItem='about' %}
{% set type_list = {
    'Diözese' : 'Bistümer',
    'Bischof' : 'Bischöfe',
    'Domherr' : 'Domherren',
    'Priester Utrecht' : 'Priester Utrecht'
}
%}
{% block body %}
    <div class="container-fluid">
	<div class="row col-12 my-3 mx-2">
	    <h2>Referenzwerke</h2>
	    {% for type in type_list|keys %}
		<h3>{{ type_list[type] }}</h3>
		{% for ref in reference_list[type] %}
		<dl class="row mx-2">
		    <dt class="col-sm-4">{{ ref.titleShort }}</dt>
		    <dd class="col">
			{{ include('reference/_detail.html.twig', {ref:ref}) }}
		    </dd>
		</dl>
		{% endfor %}
	    {% endfor %}
	</div>
    </div>
{% endblock %}
