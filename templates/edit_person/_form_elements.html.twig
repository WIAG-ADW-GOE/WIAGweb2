{# params: field width values #}
<div class="row {{ indent_class }}">
    <div class="col-12">
	<div class="d-flex flex-wrap"
	     data-action="input->hide-on-input#hideResults">
	    {# name #}
	    <div class="me-2 mt-1"
		 {{ stimulus_controller('autocomplete', {
		     url: path('person_suggest', { 'field': 'name', 'itemTypeId': itemTypeId }),
		 }) }}>
		{{ form_label(form.name) }}
		{{ form_errors(form.name) }}
		{{ form_widget(form.name, {
		    'attr': {
			'data-autocomplete-target': "input",
			'size': input_width_name,
			'class': 'wiag-input'
		    }
		}) }}
		<ul class="list-group autocomplete-target"
		    data-autocomplete-target="results"
		    style="max-width: 20rem;"></ul>
	    </div>
	    {# institution #}
	    {% set autocomplete_field = { '4': 'diocese', '5': 'institution' } %}
	    <div class="me-2 mt-1"
		 {{ stimulus_controller('autocomplete', {
		     url: path('person_suggest_base', {
			 'field': autocomplete_field[itemTypeId],
			 'itemTypeId': itemTypeId }),
		 }) }}>
		{{ form_label(form.institution) }}
		{{ form_errors(form.institution) }}
		{{ form_widget(form.institution, {
		    'attr': {
			'data-autocomplete-target': "input",
			'size': input_width_institution,
			'class': 'wiag-input'
		    }
		}) }}
		<ul class="list-group autocomplete-target"
		    data-autocomplete-target="results"
		    style="max-width: 25em;"></ul>
	    </div>
	    {# office #}
	    <div class="me-2 mt-1"
		 {{ stimulus_controller('autocomplete', {
		     url: path('person_suggest', { 'field': 'office', 'itemTypeId': itemTypeId }),
		 }) }}>
		{{ form_label(form.office) }}
		{{ form_errors(form.office) }}
		{{ form_widget(form.office, {
		    'attr': {
			'data-autocomplete-target': "input",
			'size': input_width_office,
			'class': 'wiag-input'
		    }
		}) }}
		<ul class="list-group autocomplete-target"
		    data-autocomplete-target="results"
		    style="max-width: 12em;"></ul>
	    </div>
	    {{  form_row(form.year, {
		'row_attr': {'class': 'me-2 mt-1'},
		'attr': {
		    'class': 'wiag-input'}
	    }) }}
	    {{  form_row(form.someid, {
		row_attr: {class: 'mt-1'},
		'attr': {
		    'class': 'wiag-input',
		    'size': input_width_id,
		}
	    }) }}
	</div>
    </div>
</div>
{# second row #}
