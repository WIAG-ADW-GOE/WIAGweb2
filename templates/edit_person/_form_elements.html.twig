{# third row #}
<div class="row mt-1 {{ indent_class }}">
    <div class="col-12">
	<div class="d-flex flex-wrap"
	     data-action="input->hide-on-input#hideResults">
	    <div class="me-2 mt-1">
		{{ form_label(form.editStatus) }}
		{{ form_errors(form.editStatus) }}
		{{ form_widget(form.editStatus, {
		    'attr': {
			'size': 3,
			'class': 'wiag-input',
			'style': 'min-width: 9rem',
		    }
		}) }}
	    </div>
	    <div class="me-2 mt-1">
		{{ form_label(form.dateCreated) }}
		{{ form_errors(form.dateCreated) }}
		{{ form_widget(form.dateCreated, {
		    'attr': {
			'class': 'wiag-input',
			'size': input_width_date
		    }
		}) }}
	    </div>
	    <div class="me-2 mt-1">
		{{ form_label(form.dateChanged) }}
		{{ form_errors(form.dateChanged) }}
		{{ form_widget(form.dateChanged, {
		    'attr': {
			'class': 'wiag-input',
			'size': input_width_date
		    }
		}) }}
	    </div>
	    <div class="me-2 mt-1">
		{{ form_label(form.listSize) }}
		{{ form_errors(form.listSize) }}
		{{ form_widget(form.listSize, {
		    'attr': {
			'class': 'wiag-input',
		    }
		}) }}
	    </div>
	    <div class="me-2 mt-1">
		{{ form_label(form.sortBy) }}
		{{ form_errors(form.sortBy) }}
		{{ form_widget(form.sortBy, {
		    'attr': {
			'class': 'wiag-input',
			'style': 'min-width: 7rem',
			'data-action': 'trigger#click',
		    }
		}) }}
	    </div>
	    <div class="me-2 mt-1"
		 data-controller="sync"
		 data-sync-toggle-first-value="ASC"
		 data-sync-toggle-second-value="DESC">
		{% set sort_order=form.sortOrder.vars.value %}
		<button class="btn form-control"
			       style="margin-top: 2rem !important;"
			       data-action="sync#toggle trigger#click"
			       id="{{ form.vars.id }}_sortOrderButton"
			       type="button">{% if sort_order == 'ASC' %}<img src="{{ asset('images/symbols/chevron-down-lg.svg') }}" alt="Pfeilsymbol">{% else %}<img src="{{ asset('images/symbols/chevron-up-lg.svg') }}" alt="Pfeilsymbol">{% endif %}</button>
		{{ form_widget(form.sortOrder, {
		    'attr': {
			'data-sync-target': 'toggle',
		    }
		}) }}
	    </div>
	    {{ form_rest(form) }}
	</div>
    </div>
</div>
{# {{ form_end(form) }} #}
